<p id="notice"><%= notice %></p>
<div class="container pt-5">
  
  <div>
    <strong>Name:</strong>
    <%= @product.name %>
  </div>
  <div>
    <strong>Description:</strong>
    <%= @product.description %>
  </div>
  <div>
    <strong>Price:</strong>
    <%= @product.price %>
  </div>
